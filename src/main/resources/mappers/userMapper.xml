<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.jtorol.mapper.UserMapper">
	<select id="getTime" resultType="String">
		Select now()
	</select>
	
	<insert id="insertUser">
		Insert into tbl_user (uid, upw, uname) VALUES (#{uid}, #{upw}, #{uname}) 
	</insert>
	
	<select id="selectUser" resultType="net.jtorol.domain.UserVO">
		select * from tbl_user where uid = #{uid}
	</select>
	
	<select id="selectUserWithPW" resultType="net.jtorol.domain.UserVO">
		select * from tbl_user where uid = #{uid} and upw = #{upw}        
	</select>
</mapper>